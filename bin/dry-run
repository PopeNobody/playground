#!/usr/bin/perl
# vim: ts=2 sw=2 ft=perl
eval 'exec perl -x -wS $0 ${1+"$@"}'
  if 0;
$|++;
use FindBin qw($Bin);
use Path::Tiny;
BEGIN {
  use lib "$Bin/../lib";
};
use AI::Util;
BEGIN {
  symlink("../etc/DryRun.pm","lib/DryRun.pm");
};
use common::sense;
use Snatcher;
our(@VERSION) = qw( 0 1 0 );
use AI::Conv;
use DryRun;
sub next;
my ($conv,$convf);
($convf)=(@ARGV ? shift : "dat/dry-run/conv.jwrap");
$convf=path($convf);
$conv=AI::Conv->new(path("$convf"));
my $i;
my ($form)="dat/dry-run/conv%04d.jwrap";
my $next = serial_maker($form,0);
unless(defined($next)) {
  die "failed to find next for $next";
};
ddx($conv);
$DB::single=$DB::signle=1;
my ($msg) = DryRun::next();
$msg=AI::Msg->new($msg->{role},$msg->{name},$msg->{text});
$conv->add($msg);
ddx($conv);
