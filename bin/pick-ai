#!/usr/bin/perl
# vim: ts=2 sw=2 ft=perl
eval 'exec perl -x -wS $0 ${1+"$@"}'
  if 0;
$|++;
use common::sense;
use autodie;
use lib "lib";
use AI::Util;
our(@VERSION) = qw( 0 1 0 );

die "usage: $Bin/$Script <ai>" unless @ARGV==1;
my $ai=shift;
$ai=uc($ai);
my %xlate = (
  OPENAI=>"GPT",
  ANTHROPIC=>"CLAUDE",
  XAI=>"GROK",
  GOOGLE=>"GEMINI",
  GPT=>"GPT",
  CLAUDE=>"CLAUDE",
  GROK=>"GROK",
  GEMINI=>"GEM",
  GEM=>"GEM",
  GOOGLE=>"GEM"
);
$ai=$xlate{$ai};
for(keys %ENV) {
  next unless m{^${ai}_API_(MOD|KEY|URL)$};
  push(@_,$_);
};
for(@_){
  my ($name) = m{^${ai}_(.*)};
  $ENV{$name}=$ENV{$_};
  say "export $name=$ENV{$name}";
};
